package org.extraktion.templatesCreation.behaviour.helper;

/**
 * Das Objekt wird benötigt, da StringTemplate nicht über Maps iterieren kann.
 * Die Variablen werden StringTemplate mit Objekten und Attributen dieser Klasse
 * zugänglich gemacht.
 * 
 * @author Sascha Buelles
 */
public class VariablesObject {
	/**
	 * Name einer Variablen.
	 */
	private String variableName;
	/**
	 * Content einer Variablen.
	 */
	private Object variableContent;
	/**
	 * Typ einer Variablen.
	 */
	private String type;

	/**
	 * Konstruktor.
	 * 
	 * @param variableNameM
	 *            Name
	 * @param variableContentM
	 *            Inhalt
	 * @param typeM
	 *            Typ
	 */
	public VariablesObject(final String variableNameM, final Object variableContentM, final String typeM) {
		this.variableName = variableNameM;
		this.variableContent = variableContentM;
		this.type = typeM;
	}

	/**
	 * Liefert Variablennamen.
	 * 
	 * @return Name.
	 */
	public final String getVariableName() {
		return variableName;
	}

	/**
	 * Setzt Variablennamen.
	 * 
	 * @param variableNameM
	 *            Name
	 */
	public final void setVariableName(final String variableNameM) {
		this.variableName = variableNameM;
	}

	/**
	 * Liefert Variablen Inhalt.
	 * 
	 * @return Inhalt
	 */
	public final Object getVariableContent() {
		return variableContent;
	}

	/**
	 * Setzt Variableninhalt.
	 * 
	 * @param variableContentM
	 *            Inhalt
	 */
	public final void setVariableContent(final Object variableContentM) {
		this.variableContent = variableContentM;
	}

	/**
	 * Liefert den Typ des Variableninhalts.
	 * 
	 * @return Typ
	 */
	public final String typeOf() {
		return this.type;
	}
}
